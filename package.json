{
  "name": "verball",
  "version": "0.0.1",
  "description": "API for verbs from different languages.",
  "main": "server.js",
  "scripts": {
    "test": "standard && DB='mongodb://localhost/verball_test' ava || notify -m 'Testing Failed!' -s",
    "start": "babel-node server.js",
    "dev": "nodemon --exec 'npm test & babel-node server.js'"
  },
  "keywords": [
    "api",
    "verbs",
    "languages",
    "dictionary",
    "translation"
  ],
  "author": "Fabian Schneider <fabbbbbi@googlemail.com>",
  "license": "MIT",
  "repository": {
    "url": "https://git.retromediation.net/fabian/verball",
    "type": "git"
  },
  "dependencies": {
    "mongoose": "^4.6.0",
    "mongoose-unique-validator": "^1.0.2",
    "restify": "^5.0.0-beta-1",
    "restify-errors": "^4.3.0",
    "restify-plugins": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-register": "^6.14.0",
    "node-notifier": "^4.6.1",
    "nodemon": "^1.10.2",
    "supertest": "^2.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "ava": {
    "files": [
      "**/*.test.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
